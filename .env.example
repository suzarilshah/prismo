# ===========================================
# PRISMO FINANCE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]
# ===========================================

# ----- AUTHENTICATION (Stack Auth / Neon Auth) [REQUIRED] -----
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="pck_..."
STACK_SECRET_SERVER_KEY="ssk_..."

# ----- DATABASE (Neon PostgreSQL) [REQUIRED] -----
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ----- APPWRITE (File Storage & Functions) [REQUIRED] -----
APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
APPWRITE_PROJECT_ID="your-project-id"
APPWRITE_API_KEY="your-api-key"
APPWRITE_BUCKET_ID="your-bucket-id"

# ----- AZURE DOCUMENT INTELLIGENCE (Receipt Scanning) [OPTIONAL] -----
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT="https://your-resource.cognitiveservices.azure.com/"
AZURE_DOCUMENT_INTELLIGENCE_KEY="your-key"

# ----- PLAID (Bank Connections) [OPTIONAL] -----
PLAID_CLIENT_ID="your-client-id"
PLAID_SECRET="your-secret"
PLAID_ENV="sandbox"

# ----- AI ENCRYPTION [OPTIONAL] -----
# Used for encrypting user API keys. Falls back to STACK_SECRET_SERVER_KEY if not set.
AI_ENCRYPTION_SECRET="your-encryption-secret-min-32-chars"

# ----- APP CONFIG [REQUIRED for Production] -----
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
